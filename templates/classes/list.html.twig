{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-9 text-center mt-3">
	<div class="row">
		<div class="col-md-3">
			<div class="row">
				<div class="col">
					<div class="form-group">
						<form action="{{ path('search_classes') }}" method="post">
							<input class="form-control" type="search" name="keyword" placeholder="Enter class name" required maxlength="10">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
<table class="table table-light">
    <tr>
        <th colspan="6">
            <h1 class="text text-primary">Class List</h1>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Class Id</th>
        <th class="text text-success">Classes Name</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for classes in classes %}
        <tr>
            <td>{{ classes.id }}</td>
            <td>{{ classes.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('classes_detail', {'id' : classes.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}