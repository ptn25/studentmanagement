{% extends 'base.html.twig' %}

{% block title %}classes index{% endblock %}

{% block body %}
    
<div class="container col-md-9 text-center mt-3">
<h1>Class List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr>
                <td>{{ class.id }}</td>
                <td>{{ class.name }}</td>
                <td>
                    <a class="text-decoration-none" href="{{ path('classes_detail', {'id' : class.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('classes_edit', {'id' : class.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                    <a class="text-decoration-none" href="{{ path('classes_delete', {'id' : class.id }) }}"
                onclick="return confirm('Are you sure to delete this class ?');"
                > <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
                </td>
            </tr>   
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classes_new') }}">Create new</a>
    </div>
{% endblock %}
