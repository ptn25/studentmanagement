{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-9 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="6">
            <h1 class="text text-primary">Student List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('student_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Student Id</th>
        <th class="text text-success">Student Name</th>
        <th class="text text-success">Student D.O.B</th>
        <th class="text text-success">Student Sex</th>
        <th class="text text-success">Student Address</th>
        <th class="text text-success">Student Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for student in students %}
        <tr>
            <td>{{ student.id }}</td>
            <td>{{ student.name }}</td>
            <td>{{ student.dob | date('d/m/Y') }}</td>
            <td>{{ student.sex }}</td>
            <td>{{ student.address }}</td>
            <td>
                <img src="{{ student.image }}" width="100" height="100">
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('student_detail', {'id' : student.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('student_edit', {'id' : student.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('student_delete', {'id' : student.id }) }}"
                onclick="return confirm('Are you sure to delete this student ?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}