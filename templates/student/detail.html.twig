{% extends "base.html.twig" %}

{% block body %}
    <div class="container col-md-8 text-center mt-3">
        <h3 class="alert alert-success">Student Detail</h3>
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <img src="{{ student.image }}" width="300" height="300">
                </div>
            </div>
            <div class="col-8">
                <table class="table table-bordered">
                    <tr>
                        <th colspan="2" class="bg-light">
                            <h2 class="text-danger">{{ student.name }}</h2>
                        </th>
                    </tr>
                    <tr class="h4">
                        <th>Student D.O.B</th>
                        <td>{{ student.dob | date('d/m/Y') }}</td>
                    </tr>
                    <tr class="h4">
                        <th>Student Sex</th>
                        <td>{{ student.sex }}</td>
                    </tr>
                    <tr class="h4">
                            <th>Student Address</th>
                            <td>{{ student.address }}</td>
                    </tr>
                    <tr class="h4">
                        <th>Student Class</th>
                        <td>
                            {% if student.classId != null %}
                                <a class="text-decoration-none" href="{{ path('classes_detail', {'id' : student.classId.id })}}">
                                    {{ student.classId.name }}
                                </a>
                            {% else %}
                                <i>N/A</i>
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock body %}