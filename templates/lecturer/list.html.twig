{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-9 text-center mt-3">
    <div class="row">
		<div class="col-md-3">
			<div class="row">
				<div class="col">
					<div class="form-group">
						<form action="{{ path('search_lecturer') }}" method="post">
							<input class="form-control" type="search" name="keyword" placeholder="Enter lecturer name" required maxlength="10">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
<table class="table table-light">
    <tr>
        <th colspan="6">
            <h1 class="text text-primary">Lecturer List</h1>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Lecturer Id</th>
        <th class="text text-success">Lecturer Name</th>
        <th class="text text-success">Lecturer D.O.B</th>
        <th class="text text-success">Lecturer Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for lecturer in lecturers %}
        <tr>
            <td>{{ lecturer.id }}</td>
            <td>{{ lecturer.name }}</td>
            <td>{{ lecturer.dob | date('d/m/Y') }}</td>
            <td>
                <img src="{{ lecturer.image }}" width="100" height="100">
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('lecturer_detail', {'id' : lecturer.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}