{% extends "base.html.twig" %}

{% block body %}
	<div class="container mt-3 text-center">
		<h1 class="text text-danger">
			Lecturer List
		</h1>
		<div
			class="row">
			<div class="col-md-7">
				<div class="row">
					<div class="col">
						<h5 class="text text-primary">Search lecturer</h5>
					</div>
					<div class="col">
						<div class="form-group">
							<form action="{{ path('search_lecturer') }}" method="post">
								<input class="form-control" type="search" name="keyword" placeholder="Enter lecturer's name" required maxlength="10">
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
			<div class="card-group">
				<div class="row">
					{% for lecturer in lecturers %}
						{% if lecturers | length < 4 %}
							<div class="col mt-4">
							{% else %}
								<div class="col-md-3 mt-4">
								{% endif %}
								<div class="card">
									<a href="{{ path('lecturer_detail', {'id' : lecturer.name })}}"><h3 class="text text-success">
										{{ lecturer.name }}
									</h3>
									</a>
									</div>
							</div>
						{% endfor %}
					</div>
				</div>
		</div>
	{% endblock %}
