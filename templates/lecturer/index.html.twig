{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-9 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Lecturer List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('lecturer_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Lecturer Id</th>
        <th class="text text-success">Lecturer Name</th>
        <th class="text text-success">Lecturer Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for lecturer in lecturers %}
        <tr>
            <td>{{ lecturer.id }}</td>
            <td>{{ lecturer.name }}</td>
            <td>
                <img src="{{ lecturer.image }}" width="100" height="100">
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('lecturer_detail', {'id' : lecturer.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('lecturer_edit', {'id' : lecturer.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('lecturer_delete', {'id' : lecturer.id }) }}"
                onclick="return confirm('Are you sure to delete this lecturer ?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}